<header class="header">
  <nav class="nav nav--tours">
    <a class="nav__el" href="/">All tours</a>
  </nav>

  <div class="header__logo">
    <a href="/">
      <img src="/img/logo-white.png" alt="Natours Logo">
    </a>
  </div>

  <nav class="nav nav--user">
    <% if (user) { %>
      <a class="nav__el nav__el--logout" href="#">Log Out</a>
      <a class="nav__el" href="/me">
        <img class="nav__user-img" src="/img/users/<%= user.photo %>" alt="Photo of the User (<%= user.name %>)">
        <span><%= user.name.split(' ')[0] %></span>
      </a>
    <% } else { %>
      <a class="nav__el" href="/login">Login</a>
      <a class="nav__el nav__el--cta" href="/signup">Sign Up</a>
    <% } %>
  </nav>
</header>
